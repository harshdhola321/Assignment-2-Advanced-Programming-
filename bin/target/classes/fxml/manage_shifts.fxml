      <VBox spacing="10.0" BorderPane.alignment="CENTER">
         <children>
            <HBox alignment="CENTER_LEFT" spacing="10.0">
               <children>
                  <Label text="Select Staff Member:" />
                  <ComboBox fx:id="staffComboBox" prefWidth="200.0" />
               </children>
            </HBox>
            <Label text="Current Shifts:" />
            <ListView fx:id="shiftsListView" prefHeight="200.0" />
            <Label text="Add New Shift:" />
            <HBox alignment="CENTER_LEFT" spacing="10.0">
               <children>
                  <Label text="Day:" />
                  <ComboBox fx:id="dayComboBox" prefWidth="150.0" />
                  <Label text="Start Time:" />
                  <ComboBox fx:id="startTimeComboBox" prefWidth="100.0" />
                  <Label text="End Time:" />
                  <ComboBox fx:id="endTimeComboBox" prefWidth="100.0" />
               </children>
            </HBox>
         </children>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
      </VBox>
   </center>
