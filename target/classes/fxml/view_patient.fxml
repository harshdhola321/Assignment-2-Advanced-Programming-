<BorderPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="500.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.controller.ViewPatientController">
   <top>
      <VBox alignment="CENTER" BorderPane.alignment="CENTER">
         <children>
            <Label text="View Patient Details">
               <font>
                  <Font name="System Bold" size="18.0" />
               </font>
            </Label>
         </children>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
      </VBox>
   </top>
   <center>
      <VBox spacing="10.0" BorderPane.alignment="CENTER">
         <children>
            <HBox alignment="CENTER_LEFT" spacing="10.0">
               <children>
                  <Label text="Select Patient:" />
                  <ComboBox fx:id="patientComboBox" prefWidth="200.0" />
               </children>
            </HBox>
            <GridPane hgap="10.0" vgap="10.0">
              <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" maxWidth="150.0" minWidth="10.0" prefWidth="150.0" />
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
              </columnConstraints>
              <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                  <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                  <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                  <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
              </rowConstraints>
               <children>
                  <Label text="Patient ID:" />
                  <Label text="Name:" GridPane.rowIndex="1" />
                  <Label text="Date of Birth:" GridPane.rowIndex="2" />
                  <Label text="Gender:" GridPane.rowIndex="3" />
                  <Label text="Medical Condition:" GridPane.rowIndex="4" />
                  <Label text="Admission Date:" GridPane.rowIndex="5" />
                  <Label fx:id="patientIdLabel" text="ID" GridPane.columnIndex="1" />
                  <Label fx:id="nameLabel" text="Name" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                  <Label fx:id="dobLabel" text="DOB" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                  <Label fx:id="genderLabel" text="Gender" GridPane.columnIndex="1" GridPane.rowIndex="3" />
                  <Label fx:id="medicalConditionLabel" text="Condition" GridPane.columnIndex="1" GridPane.rowIndex="4" />
                  <Label fx:id="admissionDateLabel" text="Admission Date" GridPane.columnIndex="1" GridPane.rowIndex="5" />
               </children>
            </GridPane>
            <Label text="Prescriptions:" />
            <ListView fx:id="prescriptionsListView" prefHeight="150.0" />
         </children>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
      </VBox>
   </center>
   <bottom>
      <HBox alignment="CENTER" spacing="10.0" BorderPane.alignment="CENTER">
         <children>
            <Button fx:id="closeButton" mnemonicParsing="false" onAction="#handleClose" text="Close" />
         </children>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
      </HBox>
   </bottom>
</BorderPane>
